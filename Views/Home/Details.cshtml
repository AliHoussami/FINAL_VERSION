@model projet_info_finale.Models.Restaurant

@{
    ViewData["Title"] = Model.RestaurantName;
}

<h2 class="text-center mt-4 text-gradient">@Model.RestaurantName</h2>
<p class="text-center text-muted">Find the best dishes and services at our restaurant.</p>

<div class="container mt-5">
    <!-- Restaurant Information -->
    <div class="restaurant-info p-4 shadow-sm rounded">
        <p><strong>Description:</strong> @Model.Description</p>
        <p><strong>Address:</strong> @Model.Address, @Model.City</p>
        <p><strong>Phone:</strong> @Model.Phone</p>
    </div>

    <!-- Menu Section -->
    <h3 class="text-gradient mt-5 mb-4">Menu</h3>
    <table class="table table-hover table-bordered shadow-sm">
        <thead class="table-header">
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Availability</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.MenuItems)
            {
                <tr class="@((item.Availability ? "" : "table-secondary"))">
                    <td>@item.ItemName</td>
                    <td>@item.Description</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>
                        <span class="badge @((item.Availability ? "badge-success" : "badge-danger"))">
                            @(item.Availability ? "Available" : "Unavailable")
                        </span>
                    </td>
                    <td>
                        @if (item.Availability)
                        {
                            <a asp-controller="Cart" asp-action="Add" asp-route-menuItemId="@item.MenuItemID" class="btn btn-success btn-sm">
                                Add to Cart
                            </a>
                        }
                        else
                        {
                            <button class="btn btn-secondary btn-sm" disabled>Unavailable</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    /* Typography and Colors */
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f8f9fa;
        color: #333;
    }

    .text-gradient {
        background: linear-gradient(to right, #ff7e5f, #feb47b);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .text-muted {
        font-size: 0.9rem;
    }

    /* Restaurant Information Box */
    .restaurant-info {
        background-color: #fff;
        border-left: 5px solid #ff7e5f;
        border-radius: 5px;
        line-height: 1.6;
    }

    /* Table Styling */
    .table {
        border-radius: 8px;
        overflow: hidden;
        background: #fff;
    }

    .table-header {
        background: linear-gradient(to right, #ff7e5f, #feb47b);
        color: white;
    }

    .table-secondary {
        background-color: #f5f5f5;
    }

    /* Badges */
    .badge-success {
        background-color: #28a745;
        color: white;
        padding: 5px 10px;
        border-radius: 15px;
    }

    .badge-danger {
        background-color: #dc3545;
        color: white;
        padding: 5px 10px;
        border-radius: 15px;
    }

    /* Buttons */
    .btn-success {
        background: linear-gradient(to right, #43a047, #66bb6a);
        border: none;
    }

        .btn-success:hover {
            background: linear-gradient(to right, #2e7d32, #43a047);
        }

    .btn-secondary {
        background: #6c757d;
        border: none;
    }

    /* Spacing */
    .container {
        margin-bottom: 50px;
    }
</style>
