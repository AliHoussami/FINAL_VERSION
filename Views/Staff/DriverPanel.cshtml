@model IEnumerable<projet_info_finale.Models.Order>

@{
    ViewData["Title"] = "Driver Panel";
}

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="glass-card w-75">
        <h2 class="text-center mb-4 text-gradient">Driver Panel</h2>
        
        <div class="orders-container">
            @foreach (var order in Model.Where(o => o.OrderStatus == "Out for Delivery" || o.OrderStatus == "Completed"))
            {
                <div class="order-card mb-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="text-light">Order #@order.OrderID</h5>
                        <span class="badge @(order.OrderStatus == "Out for Delivery" ? "bg-info" : "bg-success")">
                            @order.OrderStatus
                        </span>
                    </div>
                    <div class="order-details">
                        <p class="text-light mb-2">Delivery Details:</p>
                        <p class="text-light ms-3">@order.User.Address</p>
                        <p class="text-light ms-3">@order.User.City, @order.User.PostalCode</p>
                        
                        @if (order.OrderStatus == "Out for Delivery")
                        {
                            <form asp-action="UpdateDeliveryStatus" asp-controller="Staff" method="post" class="mt-3">
                                <input type="hidden" name="orderId" value="@order.OrderID" />
                                <button type="submit" name="status" value="Completed" class="btn btn-gradient">
                                    Mark as Delivered
                                </button>
                            </form>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    body {
        background: #121212;  /* Just use the solid color */
        font-family: 'Poppins', sans-serif;
        margin: 0;
        height: 100vh;
        color: white;
    }

    .text-gradient {
        background: linear-gradient(to right, #ff7e5f, #feb47b);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(15px);
        padding: 30px;
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 8px 32px rgba(31, 38, 135, 0.37);
    }

    .order-card {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        padding: 20px;
        border-radius: 15px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        margin-bottom: 20px;
    }

    .btn-gradient {
        background: linear-gradient(to right, #ff7e5f, #feb47b);
        color: white;
        font-weight: 600;
        border: none;
        border-radius: 30px;
        padding: 10px 25px;
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .btn-gradient:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(255, 126, 95, 0.6);
        color: white;
    }

    .badge {
        padding: 8px 16px;
        border-radius: 20px;
        font-weight: 500;
    }
</style>
