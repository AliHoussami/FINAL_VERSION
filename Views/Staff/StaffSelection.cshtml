@model IEnumerable<Users>
@using projet_info_finale.Models

@{
    ViewData["Title"] = "Staff Selection";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="text-center mb-0">Select Staff Member</h3>
                </div>
                <div class="card-body">
                    @if (!Model.Any())
                    {
                        <div class="alert alert-info">No staff members available.</div>
                    }
                    else
                    {
                        <div class="list-group">
                            @foreach (var user in Model.Where(u => u.UserType == UserType.Driver || u.UserType == UserType.KitchenStaff))
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <h5 class="mb-1">@user.FirstName @user.LastName</h5>
                                        <small class="text-muted">Role: @user.UserType</small>
                                    </div>
                                    <a href="@Url.Action("StaffPanel", "Staff", new { staffId = user.UserID })" 
                                       class="btn btn-primary">Choose</a>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

